@model TestesModal.Models.Cliente

@{
    ViewData["Title"] = "Clientes - Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="Delete">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Deletar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="Id" />
                <h4>Are you sure you want to delete this?</h4>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Idade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Idade)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Pais)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Pais)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger">Deletar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </form>
    </div>
</div>